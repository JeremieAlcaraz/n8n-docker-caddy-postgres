# — n8n (HTTP interne)
{$N8N_SUBDOMAIN}.{$DOMAIN_NAME} {
    reverse_proxy n8n:5678 {
        flush_interval -1
    }
    
    header {
        # Configuration de sécurité standard
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "same-origin"
    }
    
    # Activation automatique de HTTPS
    tls {$SSL_EMAIL}
}

# — Guacamole (HTTP interne) avec configuration pour iframe
{$GUAC_SUBDOMAIN}.{$DOMAIN_NAME} {
    reverse_proxy guacamole:8080 {
        flush_interval -1
        header_up Host {host}
    }
    
    # Compression pour de meilleures performances
    encode zstd gzip
    
    header {
        # En-têtes CORS pour autoriser l'iframe depuis Bubble
        Access-Control-Allow-Origin https://votre-app-bubble.com
        Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization"
        Access-Control-Allow-Credentials true
        
        # Politique de sécurité pour autoriser l'iframe
        Content-Security-Policy "frame-ancestors 'self' https://votre-app-bubble.com;"
        X-Frame-Options "ALLOW-FROM https://votre-app-bubble.com"
        
        # Configuration de sécurité standard
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "same-origin"
    }
    
    # Activation automatique de HTTPS
    tls {$SSL_EMAIL}
}